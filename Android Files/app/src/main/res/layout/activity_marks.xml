<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.damlek.ctiapp.MarksActivity"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <!-- MAIN SECTION -->
    <RelativeLayout
        android:id="@+id/main_mark_section"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar">

        <!-- Test 1 -->
        <TextView
            android:id="@+id/text_test1"
            style="@style/text_16sp_red"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Test 1: "/>

        <TextView
            android:id="@+id/text_test1_mark"
            style="@style/text_16sp_grey"

            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No Mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#777777"
            android:id="@+id/div1"
            android:layout_below="@+id/text_test1_mark"/>

        <!-- Test 2 -->
        <TextView
            android:id="@+id/text_test2"
            style="@style/text_16sp_red"

            android:layout_below="@+id/div1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Test 2: "/>

        <TextView
            android:id="@+id/text_test2_mark"
            style="@style/text_16sp_grey"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_test1_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No Mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#777777"
            android:id="@+id/div2"
            android:layout_below="@+id/text_test2"/>

        <!-- Assignment -->
        <TextView
            android:id="@+id/text_assignment"
            style="@style/text_16sp_red"

            android:layout_below="@+id/div2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Assignment: "/>

        <TextView
            android:id="@+id/text_assignment_mark"
            style="@style/text_16sp_grey"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_test2_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No Mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#777777"
            android:id="@+id/div3"
            android:layout_below="@+id/text_assignment"/>

        <!-- Project -->
        <TextView
            android:id="@+id/text_project"
            style="@style/text_16sp_red"

            android:layout_below="@+id/div3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Project: "/>

        <TextView
            android:id="@+id/text_project_mark"
            style="@style/text_16sp_grey"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_assignment_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No Mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#777777"
            android:id="@+id/div4"
            android:layout_below="@+id/text_project"/>

        <!-- Exam -->
        <TextView
            android:id="@+id/text_exam"
            style="@style/text_16sp_red"

            android:layout_below="@+id/div4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Exam: "/>

        <TextView
            android:id="@+id/text_exam_mark"
            style="@style/text_16sp_grey"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_project_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No Mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#777777"
            android:id="@+id/div5"
            android:layout_below="@+id/text_exam"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777"
        android:id="@+id/div6"
        android:layout_above="@+id/dp_section"/>

    <!-- DP MARK -->
    <RelativeLayout
        android:id="@+id/dp_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div7">

        <TextView
            style="@style/text_14sp_red"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DP: "
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_dp"
            style="@style/text_14sp_grey"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="No Mark"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777"
        android:id="@+id/div7"
        android:layout_above="@+id/final_mark_section"/>

    <!-- FINAL MARK -->
    <RelativeLayout
        android:id="@+id/final_mark_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            style="@style/text_16sp_red"
            android:id="@+id/text_final"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Mark: "
            android:padding="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_final_mark"
            style="@style/text_16sp_grey"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:text="No Mark"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>
