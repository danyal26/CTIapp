<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.damlek.ctiapp.StudentIDActivity">

    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <TextView
        style="@style/student_id"
        android:id="@+id/text_qr_student_no"

        android:layout_below="@id/action_bar"
        android:text="@string/student_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777"
        android:id="@+id/divider1"
        android:layout_below="@+id/text_qr_student_no"/>

    <TextView
        android:id="@+id/text_qr_name"
        style="@style/student_id"

        android:layout_below="@+id/divider1"
        android:text="@string/student_number"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777"
        android:id="@+id/divider2"
        android:layout_below="@+id/text_qr_name"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:paddingTop="60dp"
        android:layout_below="@id/divider2">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qr_code_image"
            android:layout_gravity="center"
            android:background="@color/white"/>

    </LinearLayout>
</RelativeLayout>
